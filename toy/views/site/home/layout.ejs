<div class="section pink darken-3 white-text center">
    <div class="container">

        <div class="input-field">
            <input type="text" class="white grey-text autocomplete" autocomplete="off" id="search-input"
                placeholder="Tìm kiếm" style="text-indent: 25px">
            <label class="label-icon" for="search-input">
                <i class="material-icons teal-text">search</i>
            </label>
            <i class="material-icons" style="cursor: pointer;" onclick="openCategory()">arrow_drop_down</i>
        </div>

        <ul class="collection" id="box-category" style="border: transparent">

            <% lstCate.forEach(function(item, index){%>
            <%if(index % 2 == 0){%>
            <div class="row">
                <div class="col s6">
                    <li class="collection-item pink accent-4 item-click hoverable" data-href="<%-item.cate%>"
                        style="cursor: pointer;">
                        <%-item.cate%>
                    </li>
                </div>
                <%}else{%>
                <div class="col s6">
                    <li class="collection-item pink accent-4 item-click hoverable" data-href="<%-item.cate%>"
                        style="cursor: pointer;">
                        <%-item.cate%>
                    </li>
                </div>
            </div>
            <%}%>
                        <%})%>
        </ul>
    </div>
</div>

<div class="row">
        <% lstProduct.forEach(function(item, index){%>
            <div class="col s12 m6 l3">
                    <div class="card hoverable">
                            <div class="card-image containers">
                                <img class="image lazy responsive-img"
                                    data-original="https://img.youtube.com/vi/<%-item.sn%>/<%-item.img%>">
                                <div class="overlay">
                                    <a href="/detail/?sn=<%-item.sn%>" class="icon" onclick='tracking("<%-item.sn%>", "<%-item.name%>")'>
                                        <i class="medium material-icons">play_circle_filled</i>
                                    </a>
                                </div>
                            </div>
                            <a href="/detail/?sn=<%-item.sn%>" onclick='tracking("<%-item.sn%>", "<%-item.name%>")'>
                                <div class="content" style="margin-top: 5px;">
                                    <h5 class="ellipsis black-text"><%-item.name%></h5>
                                    <div class="row" style="padding-bottom: 8px; padding-left: 10px; padding-right: 10px;">
                                        <div class="col s9 m8 l8">
                                            <%if (item.link != '') {%>
                                                <a href="<%-item.link%>" onclick='tracking("<%-item.sn%>", "Download")'>
                                                    <h6 class="ellipsis blue-text"><img src="img/vip.gif" alt="Vip" height="30" width="30"></h6>
                                                </a>
                                            <%}else{%>
                                                <a><h6 class="ellipsis grey-text" style="height: 30px;">&ensp;</h6></a>
                                            <%}%>
                                        </div>
                                    </div>
                                </div>
                            </a>
                    </div>
            </div>
        <%})%>
  </div>