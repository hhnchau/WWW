<!-- Search -->
<div id="search.html" class="section teal darken-1 white-text center">
    <div class="container">

        <div class="input-field">
            <input type="text" class="white grey-text autocomplete" autocomplete="off" id="search-input"
                placeholder="Tìm kiếm" style="text-indent: 25px">
            <label class="label-icon" for="search-input">
                <i class="material-icons teal-text">search</i>
            </label>
            <i class="material-icons" style="cursor: pointer;" onclick="openCategory()">arrow_drop_down</i>
        </div>

        <ul class="collection" id="box-category" style="border: transparent">

            <% lstCate.forEach(function(item, index){%>
            <%if(index % 2 == 0){%>
            <div class="row">
                <div class="col s6">
                    <li class="collection-item teal item-click hoverable" data-href="<%-item.cate%>"
                        style="cursor: pointer;">
                        <%-item.cate%>
                    </li>
                </div>
                <%}else{%>
                <div class="col s6">
                    <li class="collection-item teal item-click hoverable" data-href="<%-item.cate%>"
                        style="cursor: pointer;">
                        <%-item.cate%>
                    </li>
                </div>
            </div>
            <%}%>
                        <%})%>
        </ul>
    </div>
</div>

<!-- Product -->
<div class="container">
    <div class="row">
        
        <div class="col s12 m8 l9"> 
            <div class="row">
                <% lstProduct.forEach(function(item, index){%>
                    <div class="col s12 m6 l4">
                            <div class="card hoverable">
                                    <div class="card-image containers">
                                        <img class="image lazy responsive-img"
                                            data-original="https://img.youtube.com/vi/<%-item.sn%>/maxresdefault.jpg">
                                        <div class="overlay">
                                            <a href="/detail/?sn=<%-item.sn%>" class="icon" onclick='tracking("<%-item.sn%>", "<%-item.name%>")'>
                                                <i class="medium material-icons">play_circle_filled</i>
                                            </a>
                                        </div>
                                    </div>
                                    <a href="/detail/?sn=<%-item.sn%>" onclick='tracking("<%-item.sn%>", "<%-item.name%>")'>
                                        <div class="card-content">
                                            <h6 class="ellipsis black-text"><%-item.name%></h6>
                                            <div class="row">
                                                <div class="col s8" style="margin-top: 15px">
                                                    <h6 class="ellipsis grey-text">MS: Kp<%-item.sn%></h6>
                                                </div>
                                                <%if (item.price > 0) {%>
                                                <div class="col s4">
                                                    <h4 class="ellipsis blue-text"><%-item.price%>K</h4>
                                                </div>
                                                <%}%>
                                        </div>
                                    </div>
                                    </a>
                                </div>
                        
                    </div>
                <%})%>
            </div>
        </div>

        <div class="col s12 m4 l3"> 
                <div class="fb-page" 
                data-href="https://www.facebook.com/kingpesvn/"
                data-width="380" 
                data-hide-cover="false"
                data-show-facepile="false"></div>
        </div>
        
    </div>
</div>