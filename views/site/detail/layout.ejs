    <div class="container">
        <div class="row">
            <h4 class="center flow-text">
                <span class="teal-text" id="title-product">SẢN PHẨM CÙNG LOẠI</span>
            </h4>

            <div id="all-product"></div>

        </div>

        <div class="center">
            <span class="white-text btn" id="load-more">Hiển thị thêm</span>
        </div>

    </div>
</section>

