                                        <span style="display: table-cell;">
                                            <a id="btn-product-amount-buy" class="btn-small gone">Lưu</a>
                                        </span>
                                    </div>
                                </div>

                                <!-- AmountSell -->
                                <div class="row">
                                    <div class="input-field" style="display:table; width: 100%">
                                        <input id="product-amount-sell" type="text" value="<%-product.ProductForm.amountSell%>">
                                        <label for="product-amount-sell">Số lượng bán</label>
                                        <span style="display: table-cell;">
                                            <a id="btn-product-amount-sell" class="btn-small gone">Lưu</a>
                                        </span>
                                    </div>
                                </div>

                                <!-- CategoryId -->
                                <div class="row">
                                    <span class="grey-text" style="font-size: 0.8rem;">Danh mục</span>
                                    <div class="input-field" style="font-size: 15px; display:table; width: 100%">
                                        <select class="browser-default" id="cb-category">

                                            <option value="" disabled>Danh mục</option>
                                            <%discount.Category.forEach(function(item, index){%>
                                                <%if(product.ProductForm.categoryId == item.categoryId){%>
                                                    <option value="<%-item.categoryId%>" selected>
                                                        <%-item.categoryName%>
                                                    </option>
                                                    <%}else{%>
                                                        <option value="<%-item.categoryId%>">
                                                            <%-item.categoryName%>
                                                        </option>
                                                        <%}%>
                                                            <%})%>


                                        </select>
                                        <span style="display: table-cell;">
                                            <a id="btn-category-save" class="btn-small gone">Lưu</a>
                                        </span>
                                    </div>
                                </div>

                                <!-- Promotion -->
                                <div class="row">
                                    <span class="grey-text" style="font-size: 0.8rem;">Khuyến mãi</span>
