                                <div class="row">
                                    <div class="input-field" style=" display:table; width: 100%;">

                                        <!-- Picture 1 -->
                                        <span style="display: table-cell; padding-right: 10px;">
                                            <div style="font-size: 15px; display:table;">
                                                <span style="display: table-cell;padding-right: 10px;">
                                                    <%if(product.ProductForm.image1 == ""){%>
                                                        <div class="input-field gone image1">
                                                            <%}else{%>
                                                                <div class="input-field image1">
                                                                    <%}%>
                                                                        <img id="image1" src="upload/<%-product.ProductForm.image1%>" height="40px" width="60px">
                                                                        <i class="material-icons hoverable red-text" style="cursor: pointer;" id="btn-delete1">cancel</i>
                                                                </div>
