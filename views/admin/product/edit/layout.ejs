<!-- Section: Rdit -->
<section id="product-edit" class="section section-add grey lighten-3">
    <div class="container">
        <div class="row">
            <div class="card-panel grey lighten-3">

                <div class="row">

                    <div class="col s12">
                        <div class="card hoverable">
                            <form class="col s12">

                                <!-- ProductId -->
                                <div class="row">
                                    <div class="input-field">
                                        <input class="disable" id="product-id" type="text" value="<%-product.ProductForm.productId%>">
                                        <label for="product-id">ID sản phẩm</label>
                                    </div>
                                </div>

                                <!-- ProductSn -->
                                <div class="row">
                                    <div class="input-field" style="display:table; width: 100%">
                                        <input id="product-sn" type="text" value="<%-product.ProductForm.productSn%>">
                                        <label for="product-sn">Mã sản phẩm</label>
                                        <span style="display: table-cell;">
                                            <a id="btn-product-sn" class="btn-small gone">Lưu</a>
                                        </span>
                                    </div>
                                </div>

                                <!-- ProductName -->
                                <div class="row">
                                    <div class="input-field" style="display:table; width: 100%">
                                        <input id="product-name" type="text" value="<%-product.ProductForm.productName%>">
                                        <label for="product-name">Tên sản phẩm</label>
                                        <span style="display: table-cell;">
                                            <a id="btn-product-name" class="btn-small gone">Lưu</a>
                                        </span>
                                    </div>
                                </div>

                                <!-- PriceBuy -->
                                <div class="row">
                                    <div class="input-field" style="display:table; width: 100%">
                                        <input id="product-price-buy" type="text" value="<%-product.ProductForm.buy.toLocaleString()%>">
                                        <label for="product-price-buy">Giá mua</label>
                                        <span style="display: table-cell;">
                                            <a id="btn-product-price-buy" class="btn-small gone">Lưu</a>
                                        </span>
                                    </div>
                                </div>

                                <!-- PriceSell -->
                                <div class="row">
                                    <div class="input-field" style="display:table; width: 100%">
                                        <input id="product-price-sell" type="text" value="<%-product.ProductForm.sell.toLocaleString()%>">
                                        <label for="product-price-sell">Giá bán</label>
                                        <span style="display: table-cell;">
                                            <a id="btn-product-price-sell" class="btn-small gone">Lưu</a>
                                        </span>
                                    </div>
                                </div>

                                <!-- AmountBuy -->
                                <div class="row">
                                    <div class="input-field" style="display:table; width: 100%">
                                        <input id="product-amount-buy" type="text" value="<%-product.ProductForm.amountBuy%>">
