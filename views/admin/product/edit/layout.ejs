                                        <select class="browser-default" id="cb-promotion">

                                            <option value="" disabled selected>Khuyến mãi</option>
                                            <%discount.Promotion.forEach(function(item, index){%>
                                                <%if(product.ProductForm.promotionId == item.promotionId){%>
                                                    <option value="<%-item.promotionId%>" selected>
                                                        <%-item.promotionName%> &nbsp;-&nbsp;
                                                            <%-item.promotionDiscount%>% &nbsp;-&nbsp;
                                                                <%-(product.ProductForm.sell * item.promotionDiscount/100).toLocaleString()%>
                                                    </option>
                                                    <%}else{%>
